@inherits LayoutComponentBase
@using ConvergenceBlazorComponents.Styles

<div class="page">
    <main>
        <div class="top-menu">
            <NavMenu />
            <div class="theme-menu">
                <label class="theme-label">Theme: </label>
                <ThemeChanger IsVisible=true />
            </div>
        </div>
    
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

